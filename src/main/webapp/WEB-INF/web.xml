<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Archetype Created Web Application</display-name>
    <!--加载spring配置文件-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring-config.xml</param-value>
    </context-param>
    <!-- 注：此listener需在spring的ContextLoaderListener前  -->
    <listener>
        <listener-class>com.fuzhutech.servlet.blog.InitApplicationListener</listener-class>
    </listener>
    <!--listener spring 容器-->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!--防止内存泄漏-->
    <listener>
        <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
    </listener>
    <!--字符编码过滤器-->
    <filter>
        <description>字符编码过滤器</description>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--gzip压缩-->
    <!--filter>
        <filter-name>gzipFilter</filter-name>
        <filter-class>com.fuzhutech.common.servlet.GZIPFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>gzipFilter</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping-->
    <!--开发使用监控所有请求-->
    <!--filter>
        <filter-name>AccessLogFilter</filter-name>
        <filter-class>com.fuzhutech.common.filter.AccessLogFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>AccessLogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping-->
    <!--蜘蛛程序访问检测-->
    <filter>
        <filter-name>RobotFilter</filter-name>
        <filter-class>com.fuzhutech.servlet.blog.RobotFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>RobotFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <!-- 不拦截静态文件 -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.html</url-pattern>
        <url-pattern>*.gif</url-pattern>
        <url-pattern>*.ico</url-pattern>
        <url-pattern>/robots.txt</url-pattern>
        <url-pattern>/sitemap.xml</url-pattern>
    </servlet-mapping>
    <!-- 不拦截上传的文件 -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/ueditor/upload/file/*</url-pattern>
    </servlet-mapping>
    <!--servlet spring mvc-->
    <servlet>
        <servlet-name>SpringMVC</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:spring-mvc.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpringMVC</servlet-name>
        <!--匹配@RequestMapping时,URI会替换掉前缀/view/-->
        <url-pattern>/view/*</url-pattern>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <!--本url-pattern扩展了RobotFilter拦截的范围，否则/p/1等请求报错;上述不拦截的请求，则由CustomServlet处理-->
    <servlet>
        <servlet-name>CustomServlet</servlet-name>
        <servlet-class>com.fuzhutech.servlet.blog.CustomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomServlet</servlet-name>
        <!--下面地址不会检测到,http://localhost:8080/WEB-INF/jsp/index.jsp-->
        <url-pattern>/</url-pattern>
        <!--下面地址会检测到，http://localhost:8080/WEB-INF/jsp/index.jsp-->
        <!--url-pattern>/*</url-pattern-->
    </servlet-mapping>

    <!--欢迎页面-->
    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>

    <!--session超时时间，单位分钟-->
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <!--下载保存-->
    <mime-mapping>
        <extension>doc</extension>
        <mime-type>application/msword</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>xls</extension>
        <mime-type>application/msexcel</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>xlsx</extension>
        <mime-type>application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>pdf</extension>
        <mime-type>application/pdf</mime-type>
    </mime-mapping>
</web-app>